<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Your Account"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/awui_custom_black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create an Account to apply for your favorite\njobs and get updates on new opportunities"
                android:layout_marginVertical="5dp"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/awui_gray1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15sp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:layout_marginVertical="7dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/background_gray_light_simple">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="3dp"
                        tools:ignore="NestedWeights">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/intermedium"
                            android:textSize="12sp"
                            android:text="Name"
                            android:alpha=".7"
                            android:textColor="@color/awui_gray1"/>
                        <EditText
                            android:id="@+id/inputName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Your Name"
                            android:fontFamily="@font/intermedium"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:inputType="text"
                            android:background="@null"
                            android:imeOptions="actionNext"
                            android:textColorHint="@color/awui_gray1"
                            android:textColor="@color/awui_custom_black"
                            android:autofillHints="username" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:layout_marginVertical="7dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/background_gray_light_simple">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="3dp"
                        tools:ignore="NestedWeights">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/intermedium"
                            android:textSize="12sp"
                            android:text="Email Address"
                            android:alpha=".7"
                            android:textColor="@color/awui_gray1"/>
                        <EditText
                            android:id="@+id/inputEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Email Address"
                            android:fontFamily="@font/intermedium"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:background="@null"
                            android:textColorHint="@color/awui_gray1"
                            android:textColor="@color/awui_custom_black"
                            android:autofillHints="emailAddress" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:layout_marginVertical="7dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/background_gray_light_simple">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="3dp"
                        tools:ignore="NestedWeights">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/intermedium"
                            android:textSize="12sp"
                            android:text="Password"
                            android:alpha=".7"
                            android:textColor="@color/awui_gray1"/>
                        <EditText
                            android:id="@+id/inputPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Password"
                            android:fontFamily="@font/intermedium"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:background="@null"
                            android:textColorHint="@color/awui_gray1"
                            android:textColor="@color/awui_custom_black"
                            android:autofillHints="" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp"
                    android:layout_marginVertical="7dp"
                    android:layout_weight="1"
                    android:paddingHorizontal="12dp"
                    android:background="@drawable/background_gray_light_simple">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="3dp"
                        tools:ignore="NestedWeights">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/intermedium"
                            android:textSize="12sp"
                            android:text="Confirm Your Password"
                            android:alpha=".7"
                            android:textColor="@color/awui_gray1"/>
                        <EditText
                            android:id="@+id/inputConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Confirm The Password"
                            android:fontFamily="@font/intermedium"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:background="@null"
                            android:textColorHint="@color/awui_gray1"
                            android:textColor="@color/awui_custom_black"
                            android:autofillHints="" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:background="@drawable/background_blue_rounded_radius_small">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign Up"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:fontFamily="@font/intermedium"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/alreadyAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="35dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/interrregular"
            android:ellipsize="end"
            android:textSize="12sp"
            android:text="Already Have an Account?"
            android:textColor="@color/awui_gray1" />
    </LinearLayout>

</ScrollView>